generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Source {
  id        String    @id @default(cuid())
  name      String
  type      String
  url       String?
  query     String?
  enabled   Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]
}

model Article {
  id          String    @id @default(cuid())
  title       String
  url         String    @unique
  source      String
  sourceId    String?
  scanId      String?
  publishedAt DateTime
  rawContent  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  analysis    Analysis?
  Source      Source?   @relation(fields: [sourceId], references: [id])
  Scan        Scan?     @relation(fields: [scanId], references: [id])

  @@index([publishedAt])
  @@index([source])
  @@index([scanId])
}

model Analysis {
  id               String   @id @default(cuid())
  articleId        String   @unique
  summary          String
  categories       String
  impactScore      Int
  relevanceReason  String
  customerAngle    String
  vibecodersAngle  String
  keyTakeaways     String   @default("")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  article          Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@index([impactScore])
}

model Scan {
  id             String    @id @default(cuid())
  startedAt      DateTime  @default(now())
  completedAt    DateTime?
  itemsFetched   Int       @default(0)
  itemsAnalyzed  Int       @default(0)
  status         String
  errorMessage   String?
  articles       Article[]
  
  @@index([startedAt])
}

model RunLog {
  id             String   @id @default(cuid())
  startedAt      DateTime @default(now())
  completedAt    DateTime?
  itemsFetched   Int      @default(0)
  itemsAnalyzed  Int      @default(0)
  status         String
  errorMessage   String?
}
